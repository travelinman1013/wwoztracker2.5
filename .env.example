# WWOZ Tracker Configuration Template
# Copy this file to .env and fill in your values

# ===== REQUIRED SPOTIFY API CREDENTIALS =====
# Get these from https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=
SPOTIFY_REDIRECT_URI=http://127.0.0.1:8888/callback
SPOTIFY_REFRESH_TOKEN=
SPOTIFY_USER_ID=


# ===== OPTIONAL CONFIGURATION =====

# How often to scrape WWOZ (in seconds)
SCRAPE_INTERVAL_SECONDS=300

# Logging level: error, warn, info, debug
LOG_LEVEL=info

# Run in dry-run mode (no actual Spotify changes)
DRY_RUN=false

# Path to Chrome executable (adjust for your system)
CHROME_PATH=/Applications/Google Chrome.app/Contents/MacOS/Google Chrome

# Use a static playlist instead of creating date-based ones
# SPOTIFY_STATIC_PLAYLIST_ID=your_playlist_id_here

# ===== ARCHIVING CONFIGURATION =====

# Enable/disable song archiving to Obsidian markdown files
ARCHIVE_ENABLED=true

# Path to your Obsidian vault or archive directory
# The service will create year/month subdirectories automatically
ARCHIVE_PATH=/Users/maxwell/LETSGO/MaxVault/01_Projects/wwoztracker

# ===== ADVANCED SETTINGS =====

# WWOZ playlist URL (unlikely to change)
WWOZ_PLAYLIST_URL=https://wwoz.org/programs/playlists

# Browser timeout in milliseconds
WWOZ_TIMEOUT_MS=30000

# API rate limiting settings
SPOTIFY_RATE_LIMIT_MIN_TIME=250
SPOTIFY_RATE_LIMIT_MAX_CONCURRENT=1
WWOZ_RATE_LIMIT_MIN_TIME=1000
WWOZ_RATE_LIMIT_MAX_CONCURRENT=1
